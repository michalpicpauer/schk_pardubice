{% extends 'AppBundle:client:standard_layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="page-image" style="background-image: url('{% path page.mainImage, 'big' %}')">
                    {% if page.mainImage is empty %}
                        <div class="overlay-2"></div>
                    {% else %}
                        <div class="overlay"></div>
                    {% endif %}
                    <div class="site-heading">
                        <h1>{{ page.title }}</h1>
                        <span class="subheading">{{ page.subtitle }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mx-auto my-3">
                <div class="card">
                    <div class="card-body">
                        <b>Počet členů:</b> {{ page.members|length }}
                    </div>
                </div>
            </div>
            <div class="col-md-12 mx-auto">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Jméno</th>
                        <th>Plemena</th>
                        <th>Chovná stanice</th>
                        <th>Webová stránka</th>
                    </tr>
                    </thead>
                    {% for member in page.members %}
                        <tr>
                            <td>{{ member.name }}</td>
                            <td>{{ member.breed }}</td>
                            <td>{{ member.catteryName }}</td>
                            <td><a href="{{ member.web }}" target="_blank">{{ member.web }}</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}