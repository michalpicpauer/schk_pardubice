{% extends 'AppBundle:client:standard_layout.html.twig' %}

{% block header %}
    <header class="masthead" style="background-image: url('{{ asset('img/home-bg.jpg') }}')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>{{ page.title }}</h1>
                        <span class="subheading">{{ page.subtitle }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% for post in posts %}
                    <div class="post-preview">
                        <a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}">
                            <h2 class="post-title">
                                {{ post.title }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.abstract }}
                            </h3>
                            <p class="post-meta">
                                <span class="sonata-blog-post-author">{{ 'archive_author'|trans({'%author%': post.author }, 'SonataNewsBundle') }}</span> |
                                <i class="icon-calendar"></i>{{ post.publicationDateStart | format_date }}</p>
                        </a>
                    </div>
                {% endfor %}
                <div class="clearfix">
                    <a class="btn btn-primary float-right" href="#">Starší příspěvky &rarr;</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
