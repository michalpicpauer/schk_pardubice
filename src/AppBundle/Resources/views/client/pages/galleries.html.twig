{% extends 'AppBundle:client:standard_layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="page-image" style="background-image: url('{% path page.mainImage, 'big' %}')">
                    {% if page.mainImage is empty %}
                        <div class="overlay-2"></div>
                    {% else %}
                        <div class="overlay"></div>
                    {% endif %}
                    <div class="site-heading">
                        <h1>{{ page.title }}</h1>
                        <span class="subheading">{{ page.subtitle }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row posts">
            {% for gallery in page.galleries %}
                <div class="col-md-4">
                    <div class="post-preview box-shadow">
                        <a href="{{ path('gallery', {'slug':gallery.slug}) }}">
                            <div class="post-image"
                                 style="background-image: url('{% path gallery.galleryHasMedias[0].media, 'small' %}');"></div>
                            <div class="gallery">
                                <h3 class="post-title">
                                    {{ gallery.name }}
                                </h3>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}